using Microsoft.AspNetCore.Mvc;
using EMMAData;
using EMMAModel;
using Microsoft.EntityFrameworkCore;

namespace EMMA_Project.Controllers
{
    [ApiController]
    [Route("api/v1/[controller]")]
    public class PersonController : ControllerBase
    {
        private readonly AppDbContext _context;

        public PersonController(AppDbContext context)
        {
            _context = context;
        }

        // GET api/v1/Person?pageNumber=1&pageSize=10
        [HttpGet]
        public async Task<IActionResult> GetAll([FromQuery] int pageNumber = 1, [FromQuery] int pageSize = 10)
        {
            pageNumber = Math.Max(1, pageNumber);
            pageSize = Math.Clamp(pageSize, 1, 100);

            var total = await _context.Persons.LongCountAsync();
            var totalPages = (int)Math.Ceiling(total / (double)pageSize);

            var items = await _context.Persons
                .OrderBy(p => p.IdPerson)
                .Skip((pageNumber - 1) * pageSize)
                .Take(pageSize)
                .ToListAsync();

            var baseUrl = $"{Request.Scheme}://{Request.Host}{Request.Path}";
            var links = new Dictionary<string, string>
            {
                ["self"] = $"{baseUrl}?pageNumber={pageNumber}&pageSize={pageSize}",
                ["first"] = $"{baseUrl}?pageNumber=1&pageSize={pageSize}",
                ["last"] = $"{baseUrl}?pageNumber={totalPages}&pageSize={pageSize}"
            };
            if (pageNumber > 1) links["prev"] = $"{baseUrl}?pageNumber={pageNumber - 1}&pageSize={pageSize}";
            if (pageNumber < totalPages) links["next"] = $"{baseUrl}?pageNumber={pageNumber + 1}&pageSize={pageSize}";

            var response = new
            {
                Items = items.Select(p => new { p.IdPerson, p.Name, p.Email, p.Role }),
                PageNumber = pageNumber,
                PageSize = pageSize,
                TotalItems = total,
                TotalPages = totalPages,
                Links = links
            };

            return Ok(response);
        }

        // GET api/v1/Person/1
        [HttpGet("{id}")]
        public async Task<IActionResult> GetById(int id)
        {
            var person = await _context.Persons.FindAsync(id);
            if (person == null) return NotFound(new { error = "Person não encontrado." });

            var self = $"{Request.Scheme}://{Request.Host}{Request.Path}";
            return Ok(new { person = new { person.IdPerson, person.Name, person.Email, person.Role }, Links = new Dictionary<string, string> { ["self"] = self } });
        }

        // POST api/v1/Person
        [HttpPost]
        public async Task<IActionResult> Create([FromBody] Person p)
        {
            if (p == null || string.IsNullOrWhiteSpace(p.Email) || string.IsNullOrWhiteSpace(p.Password))
                return BadRequest(new { error = "Dados inválidos." });

            // check email uniqueness
            var exists = await _context.Persons.AnyAsync(x => x.Email == p.Email);
            if (exists) return Conflict(new { error = "Usuário já existe com este e-mail." });

            _context.Persons.Add(p);
            await _context.SaveChangesAsync();

            return CreatedAtAction(nameof(GetById), new { id = p.IdPerson }, new { p.IdPerson, p.Name, p.Email, p.Role });
        }

        // PUT api/v1/Person/1
        [HttpPut("{id}")]
        public async Task<IActionResult> Update(int id, [FromBody] Person p)
        {
            if (id != p.IdPerson) return BadRequest(new { error = "ID mismatch." });

            var db = await _context.Persons.FindAsync(id);
            if (db == null) return NotFound(new { error = "Person não encontrado." });

            db.Name = p.Name;
            db.Email = p.Email;
            db.Password = p.Password;
            db.Role = p.Role;

            _context.Entry(db).State = EntityState.Modified;
            await _context.SaveChangesAsync();
            return NoContent();
        }

        // DELETE api/v1/Person/1
        [HttpDelete("{id}")]
        public async Task<IActionResult> Delete(int id)
        {
            var db = await _context.Persons.FindAsync(id);
            if (db == null) return NotFound(new { error = "Person não encontrado." });

            _context.Persons.Remove(db);
            await _context.SaveChangesAsync();
            return NoContent();
        }
    }
}
