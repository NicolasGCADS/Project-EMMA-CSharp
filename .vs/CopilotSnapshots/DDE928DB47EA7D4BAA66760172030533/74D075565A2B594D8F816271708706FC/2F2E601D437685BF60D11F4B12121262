using EMMAData;
using EMMAModel;
using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;
using EMMABusiness;
using System.Linq;

namespace EMMA_Project.Controllers
{
    [ApiController]
    [Route("api/v1/[controller]")]
    public class ReviewController : ControllerBase
    {
        private readonly IReviewService _reviewService;

        public ReviewController(IReviewService reviewService)
        {
            _reviewService = reviewService;
        }

        // GET: api/v1/Review?pageNumber=1&pageSize=10
        [HttpGet]
        public IActionResult GetAll([FromQuery] int pageNumber = 1, [FromQuery] int pageSize = 10)
        {
            pageNumber = System.Math.Max(1, pageNumber);
            pageSize = System.Math.Clamp(pageSize, 1, 100);

            var all = _reviewService.ListarTodos();
            if (all == null || all.Count == 0) return NoContent();

            var total = all.Count;
            var totalPages = (int)System.Math.Ceiling(total / (double)pageSize);

            var items = all.OrderBy(r => r.IdReading)
                .Skip((pageNumber - 1) * pageSize)
                .Take(pageSize)
                .ToList();

            var baseUrl = $"{Request.Scheme}://{Request.Host}{Request.Path}";
            var links = new Dictionary<string, string>
            {
                ["self"] = $"{baseUrl}?pageNumber={pageNumber}&pageSize={pageSize}",
                ["first"] = $"{baseUrl}?pageNumber=1&pageSize={pageSize}",
                ["last"] = $"{baseUrl}?pageNumber={totalPages}&pageSize={pageSize}"
            };
            if (pageNumber > 1) links["prev"] = $"{baseUrl}?pageNumber={pageNumber - 1}&pageSize={pageSize}";
            if (pageNumber < totalPages) links["next"] = $"{baseUrl}?pageNumber={pageNumber + 1}&pageSize={pageSize}";

            var response = new
            {
                Items = items,
                PageNumber = pageNumber,
                PageSize = pageSize,
                TotalItems = total,
                TotalPages = totalPages,
                Links = links
            };

            return Ok(response);
        }

        // GET: api/v1/Review/{idReading}
        [HttpGet("{idReading}")]
        public IActionResult GetById(int idReading)
        {
            var review = _reviewService.ObterPorId(idReading);

            if (review == null)
                return NotFound(new { error = "Review não encontrado." });

            var self = $"{Request.Scheme}://{Request.Host}{Request.Path}";
            return Ok(new { review, Links = new Dictionary<string, string> { ["self"] = self } });
        }

        // POST: api/v1/Review
        [HttpPost]
        public IActionResult Create([FromBody] Review review)
        {
            if (review == null || string.IsNullOrWhiteSpace(review.Description))
                return BadRequest(new { error = "Dados inválidos." });

            var created = _reviewService.Criar(review);
            return CreatedAtAction(nameof(GetById), new { idReading = created.IdReading }, created);
        }

        // PUT: api/v1/Review/{idReading}
        [HttpPut("{idReading}")]
        public IActionResult Update(int idReading, [FromBody] Review review)
        {
            if (idReading != review.IdReading)
                return BadRequest(new { error = "O ID da URL não corresponde ao ID do objeto." });

            var existing = _reviewService.ObterPorId(idReading);

            if (existing == null)
                return NotFound(new { error = "Review não encontrado." });

            var success = _reviewService.Atualizar(review);
            return success ? Ok(review) : StatusCode(500);
        }

        // DELETE: api/v1/Review/{idReading}
        [HttpDelete("{idReading}")]
        public IActionResult Delete(int idReading)
        {
            var review = _reviewService.ObterPorId(idReading);

            if (review == null)
                return NotFound(new { error = "Review não encontrado." });

            var success = _reviewService.Remover(idReading);
            return success ? NoContent() : StatusCode(500);
        }
    }
}
